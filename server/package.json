{
  "name": "watergame-iot",
  "private": true,
  "version": "1.0.0",
  "description": "Watergame IoT Server",
  "license": "MIT",
  "scripts": {
    "copy-assets": "node ./script/build/copy_assets.js",
    "prebuild": "rimraf dist",
    "build": "npm run copy-assets && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run copy-assets nest start",
    "start:dev": "npm run copy-assets && nest start --watch",
    "start:debug": "npm run copy-assets && nest start --debug --watch",
    "start:prod": "npm run copy-assets && node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.10.12",
    "@nestjs/core": "^6.10.12",
    "@nestjs/platform-express": "^6.8.0",
    "@nestjs/swagger": "^3.1.0",
    "@types/request-promise-native": "^1.0.17",
    "aws-sdk": "^2.556.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "crypto-js": "^3.1.9-1",
    "csv-parser": "^2.3.1",
    "ejs": "^3.0.1",
    "http-proxy-middleware": "^0.20.0",
    "json-2-csv": "^3.10.2",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.8.0",
    "lodash": "^4.17.15",
    "mqtt": "^4.2.6",
    "multer": "^1.4.2",
    "multiparty": "^4.2.1",
    "mysql2": "^1.7.0",
    "nest-winston": "^1.1.2",
    "node-fetch": "^2.6.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "request-promise-native": "^1.0.7",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "sequelize": "^5.21.2",
    "sequelize-typescript": "^1.0.0",
    "source-map-support": "^0.5.16",
    "swagger-ui-express": "^4.1.2",
    "swagger2-postman-generator": "^2.1.4",
    "which-country": "^1.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.1",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.8.0",
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/crypto-js": "^3.1.43",
    "@types/express": "^4.17.1",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/jest": "^24.0.18",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.144",
    "@types/mqtt": "^2.5.0",
    "@types/node": "^12.12.11",
    "@types/node-fetch": "^2.5.8",
    "@types/sequelize": "^4.28.6",
    "@types/supertest": "^2.0.8",
    "fs-extra": "^8.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.5.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
